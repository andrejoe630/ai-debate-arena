{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "verbatimModuleSyntax": true,
    "types": ["node"]
  },
  "include": [
    "src/server.ts",
    "src/lib/**/*",
    "src/config.ts",
    "src/list-anthropic-models.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "debate-ui",
    "public",
    "src/App.tsx",
    "src/App.css",
    "src/App.js",
    "src/App.js.map",
    "src/App.tsx.backup",
    "src/main.tsx",
    "src/main.js",
    "src/main.js.map",
    "src/index.css",
    "src/topics.ts",
    "src/types.ts",
    "src/utils.ts",
    "src/judging.types.ts",
    "src/components/**/*",
    "src/auth/**/*",
    "src/assets/**/*",
    "src/tests/**/*",
    "src/lib/firebase.ts",
    "**/*.config.js",
    "**/*.config.ts"
  ]
}
